{
  "name": "delicious-hamburgers",
  "version": "0.4.3",
  "description": "Beautiful SASS powered hamburger menu toggle buttons",
  "main": "scss/hamburgers.scss",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kapoko/delicious-hamburgers.git"
  },
  "scripts": {
    "test": "npm-run-all stylelint",
    "build": "webpack",
    "start": "webpack --watch --mode development",
    "watch": "npm run start",
    "stylelint": "stylelint 'scss/**/*.scss'",
    "stylelint:fix": "stylelint 'scss/**/*.scss' --fix",
    "prepare": "npm-run-all test build"
  },
  "keywords": [
    "sass",
    "css",
    "hamburgers",
    "menu",
    "toggle",
    "button"
  ],
  "author": "Kasper Koman <kasper.koman@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kapoko/delicious-hamburgers/issues"
  },
  "homepage": "https://github.com/kapoko/delicious-hamburgers#readme",
  "devDependencies": {
    "clean-webpack-plugin": "^2.0.1",
    "css-loader": "^2.1.1",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "remove-files-webpack-plugin": "^1.4.0",
    "sass-loader": "^7.3.1",
    "style-loader": "^0.23.1",
    "stylelint": "^13.2.1",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-config-standard": "^20.0.0",
    "terser-webpack-plugin": "^1.4.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-fix-style-only-entries": "^0.2.1"
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
      "indentation": 4,
      "max-nesting-depth": 3
    }
  },
  "dependencies": {}
